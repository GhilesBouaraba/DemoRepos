<WelcomeScreen>:
    name: "welcomescreen"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 0.15, 0.15, 0.15, 1
            RoundedRectangle:
                size: root.width * 0.76, root.height * 0.86
                pos: ((root.width - (root.width * 0.76)) / 2), ((root.height - (root.height * 0.86)) / 2)
                radius: [8]
        Label:
            text: "Welcome!"
            font_size: "25sp"
            pos_hint: {"center_x": 0.5, "center_y": .88}
        Button:
            text: "Login"
            size_hint: .55, .1
            pos_hint: {"center_x": .5, "center_y": .575}
            background_normal: ''
            background_color: .11, .36, .69, 1
            on_press: root.manager.current = 'loginscreen'
            

        Button:
            text: "Sign Up"
            size_hint: .55, .1
            pos_hint: {"center_x": .5, "center_y": .375}
            background_normal: ''
            background_color: .11, .36, .69, 1
            on_press: root.manager.current = 'signup'

<LoginScreen>:
    name: "loginscreen"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 0.15, 0.15, 0.15, 1
            RoundedRectangle:
                size: root.width * 0.76, root.height * 0.86
                pos: ((root.width - (root.width * 0.76)) / 2), ((root.height - (root.height * 0.86)) / 2)
                radius: [8]
        TextInput:
            id: username_input
            size_hint: .45, .07
            pos_hint: {"center_x": .5, "center_y": .75}
            hint_text: "Username"
            hint_text_colour: (1, 1, 1, 0.5)
            background_color: (0.3, 0.3, 0.3, 1)
            foreground_color: (1, 1, 1, 1)
            padding: [10, 5]
        TextInput:
            id: password_input
            size_hint: .45, .07
            pos_hint: {"center_x": .5, "center_y": .55}
            hint_text: "Password"
            hint_text_colour: (1, 1, 1, .5)
            background_color: (.3, .3, .3, 1)
            foreground_color: (1, 1, 1, 1)
            padding: [10, 5]
            password: True
        Button:
            text: "Submit"
            size_hint: .45, .07
            pos_hint: {"center_x": .5, "center_y": .375}
            background_normal: ''
            background_color: .11, .36, .69, 1
            on_press: root.server_login()


